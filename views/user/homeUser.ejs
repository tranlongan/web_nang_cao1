<!--chọn số sản phẩm để hiển thị mà user thích -->
<script>
    const submitNumberPage = async (id_user) => {
        try {
            const data_select_number_page = document.getElementById("selectNumberPage").value;
            const result = await axios.post(`/insertNumberPageToCookie?id_user=${id_user}`, {data_select_number_page});
            const body = result.data;
            if (body.msg === 'ok') {
                window.open(`/homeUser?id_user=${id_user}`, `_self`);
            }
        } catch (e) {
            console.error(e);
        }
    }
</script>

<!--tìm kiếm-->
<script>
    const searchProductEnter = async (e) => {
        if (e.keyCode === 13) {
            try {
                const search = document.getElementById("data_input_search").value;
                if (search === '') return
                const distinguish = document.getElementById("inputDistinguish").value;
                window.open(`/user/pageSearchProduct?id_user=<%= id_user %>&search=${search}&distinguish=${distinguish}`, `_self`);
            } catch (e) {
                console.error(e);
            }
        }
    }
</script>
